<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="240dip"
	android:layout_height="fill_parent"
	android:layout_gravity="start"
	android:background="@color/moe_green_dan"
	android:orientation="vertical">

	<ScrollView
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:scrollbars="none">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="240dip"
				android:layout_height="50.0dip"
				android:background="@drawable/selector_category_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:paddingLeft="15.0dip"
				android:paddingRight="10.0dip"
				android:text="登录"
				android:textColor="@color/black"
				android:textSize="16.0sp"
				android:id="@+id/menuLogin"/>

			<TextView
				android:layout_width="240dip"
				android:layout_height="50.0dip"
				android:background="@drawable/selector_category_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:paddingLeft="15.0dip"
				android:paddingRight="10.0dip"
				android:text="随机页面"
				android:textColor="@color/black"
				android:textSize="16.0sp"
				android:id="@+id/menuRandom"/>

			<TextView
				android:layout_width="240dip"
				android:layout_height="50.0dip"
				android:background="@drawable/selector_category_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:paddingLeft="15.0dip"
				android:paddingRight="10.0dip"
				android:text="@string/bookmark"
				android:textColor="@color/black"
				android:textSize="16.0sp"
				android:id="@+id/menuBookmark"/>

			<TextView
				android:layout_width="240dip"
				android:layout_height="50.0dip"
				android:background="@drawable/selector_category_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:paddingLeft="15.0dip"
				android:paddingRight="10.0dip"
				android:text="@string/history"
				android:textColor="@color/black"
				android:textSize="16.0sp"
				android:id="@+id/menuHistory"/>

			<TextView
				android:layout_width="240dip"
				android:layout_height="50.0dip"
				android:background="@drawable/selector_category_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:paddingLeft="15.0dip"
				android:paddingRight="10.0dip"
				android:text="设置"
				android:textColor="@color/black"
				android:textSize="16.0sp"
				android:id="@+id/menuSettings"/>

			<TextView
				android:layout_width="240dip"
				android:layout_height="50.0dip"
				android:background="@drawable/selector_category_item"
				android:clickable="true"
				android:gravity="center_vertical"
				android:paddingLeft="15.0dip"
				android:paddingRight="10.0dip"
				android:text="退出"
				android:textColor="@color/black"
				android:textSize="16.0sp"
				android:id="@+id/menuQuit"/>

		</LinearLayout>

	</ScrollView>

</LinearLayout>

